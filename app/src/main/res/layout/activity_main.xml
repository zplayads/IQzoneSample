<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zplay.playable.bob.iqzonesample.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadRewardedVideo"
        android:text="load Rewarded Video" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showRewardedVideo"
        android:text="show Rewarded Video" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#222">

        <com.iqzone.android.IQzoneBannerView
            android:id="@+id/imd_banner_ad"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>


</LinearLayout>
